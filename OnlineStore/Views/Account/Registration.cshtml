@{
    ViewData["Title"] = "Регистрация";
}
@model OnlineStore.View.ViewModels.RegistrationViewModel

<section class="registration">
    <form class="registration-form" method="post" asp-action="Registration" asp-controller="Account">
        <div asp-validation-summary="ModelOnly" class="text-danger form-group"></div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.Email)" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.Password)" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.ConfirmPassword)" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" type="text" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.FirstName)" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MiddleName"></label>
            <input asp-for="MiddleName" type="text" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.MiddleName)" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" type="text" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.LastName)" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" type="text" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.Age)" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Region"></label>
            <input asp-for="Region" type="text" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.Region)" />
            <span asp-validation-for="Region" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City"></label>
            <input asp-for="City" type="text" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.City)" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" type="text" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.Address)" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NumberHouse"></label>
            <input asp-for="NumberHouse" type="text" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.NumberHouse)" />
            <span asp-validation-for="NumberHouse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" type="tel" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.PhoneNumber)" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" type="date" class="form-control mb-2" placeholder="@Html.DisplayNameFor(m => m.DateOfBirth)" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group d-flex flex-column">
            <button type="submit" class="btn btn-outline-primary mb-2">Зарегистрироваться</button>
            <a asp-action="Login" asp-controller="Account" class="btn btn-outline-primary">Войти</a>
        </div>
    </form>
</section>